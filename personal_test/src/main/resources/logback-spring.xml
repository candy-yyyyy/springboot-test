<?xml version="1.0" encoding="UTF-8"?>
<configuration  scan="true" scanPeriod="60 seconds" debug="false">
    <contextName>logback</contextName>
    <!--输出到控制台-->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
<!--            <level>ERROR</level>-->
            <level>INFO</level>
        </filter>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">  
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread][lineno:%line] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--按天生成日志-->
    <appender name="logFile"  class="ch.qos.logback.core.rolling.RollingFileAppender">
          <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>InfoServiceOrderService
          </filter>
          
          <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
               <!-- <FileNamePattern>log/%d{yyyy-MM}/%d{yyyy-MM-dd}.log</FileNamePattern> -->
               <FileNamePattern>log/moveMonitor.log.%d</FileNamePattern>
               <MaxHistory>30</MaxHistory>  
          </rollingPolicy>
		  <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">  
               <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>  
          </encoder>  
    </appender>
    
    <root level="INFO,ERROR">
        <appender-ref ref="console" />
        <appender-ref ref="logFile" />
    </root>
</configuration>